<h2>List of articles</h2>

<ul>
    <% @articles.each do |article| %>  
       <li> 
        <%= article.title %> 
        <%= link_to "Show", article_path(article) %>
        <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: 'Are you sure?'} %>
       </li>
    <% end %>
</ul>

<%= link_to 'Create new article', new_article_path %>